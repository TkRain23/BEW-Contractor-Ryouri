<h1>Most Recent Recipes</h1>
<hr>
<br>

<div>
    {{#each reviews}}
        <div class="card">
            <div class="card-header">
                <h3>{{this.title}}</h3>
            </div>
            <div class="card-body">
                <h5 class="card-title">By: {{this.recipeTitle}}</h5>
                <p class="card-text">Difficulty: {{this.difficulty}}</p>
                <a href="/reviews/{{this._id}}" class="btn btn-primary">Read More</a>
            </div>
        </div>
        <br>
    {{/each}}
</div>
