<!-- views/partials/comment-form.handlebars -->

<form action="/reviews/comments" method="post">
  <input type="hidden" value="{{review._id}}" name="reviewId">
    <div class="form-group input-field col s12">
    <h5>Comments</h5>
</div>
    <!-- TITLE -->
    <div class="form-group input-field col s6">
      <label for="comment-title">Name</label><br>
      <input class="form-control"
        id="comment-title"
        type="text"
        name="title"
        placeholder="Your Name"/>
    </div>

    <!-- DESCRIPTION -->
    <div class="form-group input-field col s6">
      <label for="comment-content">Comment</label><br>
      <textarea class="materialize-textarea"
      id="comment-content"
      name="content"
      rows="10"
      placeholder="Your comment..."/></textarea>
    </div>

  <!-- <div class="form-group input-field col s12">
      <textarea class="materialize-textarea" id="review-description" name="description"/></textarea>
      <label for="comment-content">Description</label>
  </div> -->

  <!-- BUTTON -->
  <div class="form-group input-field col s6">
    <button class="btn btn-primary" type="submit">Save Comment</button>
  </div>
</form>
